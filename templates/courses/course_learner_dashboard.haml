- extends "layout.haml"
- load staticfiles

- block page_title
  %title
    = program.display_name
    = _(" | Courses | McKinsey Academy")

- block content
  #home-courses
    .row.
      .large-8.columns.dash-programs
        %h3 OS Bold 24
        %p OS Reg 14/21
        .row
          -for tile in learner_dashboard_tiles
            .learner-program
              .panel.panel-program 
                %h4= tile.title
      .large-4.columns.dash-widget
        .learner-info
          %h5 OS BOLD 10
          %p OS Reg 18/20
          %h5
            %span OS Bold 10 
            %span.reg | OS Reg 10