- extends "layout.haml"
- load staticfiles

- block page_title
  %title
    = program.display_name
    = _(" | Courses | McKinsey Academy")

- block content
  #home-courses
    .row
      .large-8.columns.dash-programs
        -if branding
          %h3{style:"color:#{branding.text_colors}"}= learner_dashboard.title
          %p{style:"color:#{branding.text_colors}"}= learner_dashboard.description 
        -else
          %h3= learner_dashboard.title
          %p= learner_dashboard.description
        .row
          -for tile in learner_dashboard_tiles
            .learner-program
              .panel.panel-program 
                %h4= tile.title
      .large-4.columns.dash-widget
        -if branding
          %h5{style:"color:#{branding.text_colors}"} FOR DISCOVERY
        -else 
          %h5 FOR DISCOVERY
        -for item in discovery_items
          .learner-info
            -if branding
              %a{href:"#{item.link}"}
                %p{style:"color:#{branding.text_colors}"}= item.title
              %h5
                %span{style:"color:#{branding.text_colors}"}= item.author
              %hr
            -else 
              %a{href:"#{item.link}"}
                %p= item.title
              %h5
                %span= item.author
              %hr

