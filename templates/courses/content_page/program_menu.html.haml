
.program-title
  = program.program_name
%ul.courses
  - for program_course in program.courses
    %li
      - if program_course.has_future_start_date
        .course-name.unavailable
          = program_course.course_name
        .status.unavailable
          = program_course.formatted_start_date
      - else
        %a.course-name{href: "#{program_course.nav_url}", title: "#{program_course.course_name}"}
          = program_course.course_name
        - if program_course.percent_complete < 100
          .status
            = program_course.percent_complete_message
        - else
          .status.complete Completed
