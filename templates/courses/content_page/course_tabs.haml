%ul.course-tabs
  %li
    %a.nav-1{class: "{% ifequal request.resolver_match.url_name 'navigate_to_lesson_module' %}selected{% endifequal %}", href: "/courses/#{course.id}/lessons", "data-dropdown": "lessons-content", "data-tooltip": "Lessons", style: "{% if client_customization and client_customization.hex_navigation_icons %}color:#{client_customization.hex_navigation_icons};{% endif %}"}
      %i.mk-icon-lessonsnav
    #lessons-content.course-tab-dropdown{"data-dropdown-content": True}
      - include "courses/content_page/lesson_menu.haml"
  - if feature_flags.discussions
    %li
      %a{class: "nav-1 {% ifequal request.resolver_match.url_name 'course_discussion' %}selected{% endifequal %}", href: "/courses/#{course.id}/discussion", "data-tooltip": "Discussion", style: "{% if client_customization and client_customization.hex_navigation_icons %}color:#{client_customization.hex_navigation_icons};{% endif %}"}
        %i.fa.fa-comments-o
  - if feature_flags.group_work
    %li
      %a{class: "nav-1 {% ifequal request.resolver_match.url_name 'course_group_work' %}selected{% endifequal %}", href: "/courses/#{course.id}/group_work", "data-tooltip": "Group Work", style: "{% if client_customization and client_customization.hex_navigation_icons %}color:#{client_customization.hex_navigation_icons};{% endif %}"}
        %i.mk-icon-groupworknav
  - if feature_flags.cohort_map
    %li
      %a{class: "nav-1 {% ifequal request.resolver_match.url_name 'course_cohort' %}selected{% endifequal %}", href: "/courses/#{course.id}/cohort", "data-tooltip": "Cohort", style: "{% if client_customization and client_customization.hex_navigation_icons %}color:#{client_customization.hex_navigation_icons};{% endif %}"}
        %i.fa.fa-globe
  %li
    %a{class: "nav-1 {% ifequal request.resolver_match.url_name 'course_progress' %}selected{% endifequal %}", href: "/courses/#{course.id}/progress", "data-tooltip": "Progress", style: "{% if client_customization and client_customization.hex_navigation_icons %}color:#{client_customization.hex_navigation_icons};{% endif %}"}
      %i.fa.fa-bar-chart-o
  %li
    %a{class: "nav-1 {% ifequal request.resolver_match.url_name 'course_news' %}selected{% endifequal %}", href: "/courses/#{course.id}/announcements", "data-dropdown": "announcements-content", "data-tooltip": "Course Materials", style: "{% if client_customization and client_customization.hex_navigation_icons %}color:#{client_customization.hex_navigation_icons};{% endif %}"}
      %i.fa.fa-file-text-o
    #announcements-content.course-tab-dropdown{"data-dropdown-content": True}
      %a{class: "{% ifequal request.resolver_match.url_name 'course_news' %}selected{% endifequal %}", href: "/courses/#{course.id}/announcements"}= _("Announcements")
      %a{class: "{% ifequal request.resolver_match.url_name 'course_overview' %}selected{% endifequal %}", href: "/courses/#{course.id}/overview"}= _("Course Overview")
      %a{class: "{% ifequal request.resolver_match.url_name 'course_resources' %}selected{% endifequal %}", href: "/courses/#{course.id}/resources"}= _("Resources")
  %li
    %a.xns-icon{class:"nav-1", "data-tooltip": "Notifications", style: "{% if client_customization and client_customization.hex_navigation_icons %}color:#{client_customization.hex_navigation_icons};{% endif %}"}
      %i.fa.fa.fa-exclamation-circle
      %span.xns-counter{style: "{% if client_customization and client_customization.hex_notification %}background-color:#{client_customization.hex_notification};{% endif %}"}

%div.xns-pane
- include "django/notifications_widget.html"
