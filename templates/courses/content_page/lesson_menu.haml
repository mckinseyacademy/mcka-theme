- for lesson in course.chapters
  - if lesson.is_released and lesson.id != current_chapter.id
    %a{class: "{% if course.current_lesson == lesson %}current{% endif %}", href: "#{lesson.navigation_url}", title: "#{lesson.name}"}
      .col-left
        %i.status.fa{class: "fa-{% if lesson.progress == 100 %}check-circle complete{% else %}circle {% if lesson.progress > 0 %}partial{% endif %}{% endif %}"}
        Lesson ={lesson.index}:
      .col-right= lesson.name
  - else
    %a{href: "#{lesson.navigation_url}", title: "#{lesson.name}", disabled: None}
      Lesson ={lesson.index}: ={lesson.name}
