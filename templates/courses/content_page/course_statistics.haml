%article#course-statistics
  %section.course-proficiency.no-progress
    .sub-2
      Proficiency:
      %a{href: '#'}
        %i.fa.fa-arrow-circle-right
    .visualization
      .total= proficiency
      .inner-circle
      .progress-radial
    .label-4 cohort average = ={cohort_proficiency_average}
    %a.info{href: '#'}
      %i.fa.fa-info-circle
  %section.course-progress
    .zero
      %div
        %span Once this feature is implemented, your progress through course materials will be displayed here. <a data-reveal-id='beta_visualizations'>Learn more</a>.
    .sub-2
      Progress:
      %a{href: '#'}
        %i.fa.fa-arrow-circle-right
    .visualization{data-percent: '71%'}
      .total 71%
      .bar
    .label-4 cohort average = 58%
    %a.info{href: '#'}
      %i.fa.fa-info-circle
  %section.course-engagement
    .zero
      %div
        %span Once this feature is implemented, your social engagement will be displayed here. <a data-reveal-id='beta_visualizations'>Learn more</a>.
    .sub-2
      Engagement:
      %a{href: '#'}
        %i.fa.fa-arrow-circle-right
    .visualization
      .band-1.filled
      .band-2
      .total 12
    .label-4 cohort average = 28 points
    %a.info{href: '#'}
      %i.fa.fa-info-circle
