%article#course-statistics
  %section.course-proficiency.no-progress
    .zero
      %div
        %span Once this feature is implemented, your proficiency will be displayed here. <a data-reveal-id='beta_visualizations'>Learn more</a>.
    .sub-2
      Proficiency:
      %a{href: '#'}
        %i.fa.fa-arrow-circle-right
    .visualization
      .total 80
      .inner-circle
      .progress-radial
    .label-4 cohort average = 45
    %a.info{href: '#'}
      %i.fa.fa-info-circle
  %section.course-progress
    .zero
      %div
        %span Once this feature is implemented, your progress through course materials will be displayed here. <a data-reveal-id='beta_visualizations'>Learn more</a>.
    .sub-2
      Progress:
      %a{href: '#'}
        %i.fa.fa-arrow-circle-right
    .visualization{data-percent: '71%'}
      .total 71%
      .bar
    .label-4 cohort average = 58%
    %a.info{href: '#'}
      %i.fa.fa-info-circle
  %section.course-engagement{class: "{% if social_total == 0 %}no-progress{% endif %}" }
    .sub-2
      Engagement:
      %a{href: '#'}
        %i.fa.fa-arrow-circle-right
    .visualization{class: "{% if social_total >= 90 %}filled{% endif %}"}
      .band-1{class: "{% if social_total >= 30 %}filled{% endif %}"}
      .band-2{class: "{% if social_total >= 60 %}filled{% endif %}"}
      .total= social_total
    .label-4 cohort average = ={cohort_social_average} points
    %a.info{href: '#'}
      %i.fa.fa-info-circle
