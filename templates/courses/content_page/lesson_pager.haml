- load i18n

%div.controls
  - if left_lesson_module_navigator
    - if left_lesson_module_navigator.is_started
      %a.page-to.previous{"href": "#{left_lesson_module_navigator.navigation_url}"}
        %i.fa.fa-chevron-left
        .mcka-tooltip
          %p.style-4
            - if lesson_custom_label
              {% blocktrans with lesson_index=left_lesson_module_navigator.lesson_index %} {{lesson_custom_label}} {{lesson_index}}:{% endblocktrans %}
            - else
              {% trans "Lesson" %} #{left_lesson_module_navigator.lesson_index}:
            - if module_custom_label
              {% blocktrans with index=left_lesson_module_navigator.index lesson_count=left_lesson_module_navigator.lesson_count %} {{lesson_custom_label}} {{index}} of {{lesson_count}}{% endblocktrans %}
            - else
              {% trans "Module" %} #{left_lesson_module_navigator.index} {% trans "of" %} #{left_lesson_module_navigator.lesson_count}
          .vertical-index= left_lesson_module_navigator.name
    - else
      %a.page-to.previous.future{"href": "#"}
        %i.fa.fa-chevron-left
        .mcka-tooltip
          %p.style-4
            - if lesson_custom_label
              {% blocktrans with start_date=left_lesson_module_navigator.start_upon %}{{lesson_custom_label}} available on {{ start_date }}{% endblocktrans %}
            -else
              {% blocktrans with start_date=left_lesson_module_navigator.start_upon %}Lesson available on {{ start_date }}{% endblocktrans %}

  - else
    %a.page-to.previous
      %i.fa.fa-chevron-left
  - if right_lesson_module_navigator
    - if right_lesson_module_navigator.is_started
      %a.page-to.next{"href": "#{right_lesson_module_navigator.navigation_url}"}
        %i.fa.fa-chevron-right
        .mcka-tooltip
          %p.style-4
            - if lesson_custom_label
              {% blocktrans with lesson_index=right_lesson_module_navigator.lesson_index %} {{lesson_custom_label}} {{lesson_index}}:{% endblocktrans %}
              #{lesson_custom_label} #{right_lesson_module_navigator.lesson_index}:
            - else
              {% trans "Lesson" %} #{right_lesson_module_navigator.lesson_index}:
            - if module_custom_label
              {% blocktrans with index=right_lesson_module_navigator.index lesson_count=right_lesson_module_navigator.lesson_count%} {{module_custom_label}} {{index}} of {{lesson_count}}{% endblocktrans %}
            - else
              {% trans "Module" %} #{right_lesson_module_navigator.index} {% trans "of" %} #{right_lesson_module_navigator.lesson_count}
          .vertical-index= right_lesson_module_navigator.name
    - else
      %a.page-to.next.future{"href": "#"}
        %i.fa.fa-chevron-right
        .mcka-tooltip
          %p.style-4
            - if lesson_custom_label
              {% blocktrans with start_date=right_lesson_module_navigator.start_upon %}{{lesson_custom_label}} available on {{ start_date }}{% endblocktrans %}
            -else
              {% blocktrans with start_date=right_lesson_module_navigator.start_upon %}Lesson available on {{ start_date }}{% endblocktrans %}
  - else
    %a.page-to.next
      %i.fa.fa-chevron-right
