%header#learner-dashboard-header.background-blue{role: 'banner', style: "{% if branding and branding.rule_color %} border-bottom: 5px solid #{branding.rule_color};{% endif %}"}
  .row.collapse.main-nav
    .large-6.small-6.columns.header-row
      -if branding and branding.logo_image
        %a{:href => "/learnerdashboard"}
          %img.header-logo{src: "/company_images/#{branding.logo_image}"}
    .large-6.small-6.columns.header-row
      .row
        .large-12.columns.header-padding
          .row
            .large-12.columns.header-padding
              - block user_region
                - if request.user.is_authenticated
                  %a.user-info{data-dropdown: "profile-container", style:"position:inherit;"}
                    .user-name= user.username
                    %i.fa.fa-sort-desc
                    .user-image
                      %img{src: "#{user.image_url}", alt: "#{user.username}"}
                    #profile-container{data-dropdown-content: "true"}
                - else
                  .login-action
                    %a.small.radius.button{href: "/accounts/login"}= _("Log in")
      .row
        .large-12.columns.header-padding
          %div.right.header-path
            - if milestones_enabled
              %a.right{:href => "#", :data-tooltip => "Calendar", style: "{% if branding %} color: #{branding.icon_color};{% endif %}"}
                %i#open-calendar.fa.fa-calendar.header-link

            - if request.resolver_match.url_name == 'course_resources_learner_dashboard'
                %a.disabled.right{:href => "/learnerdashboard/courses/#{course.id}/resources", :data-tooltip => "Resources"}
                  .fa.fa-file-text-o.header-link
            - else
              %a.right{:href => "/learnerdashboard/courses/#{course.id}/resources", :data-tooltip => "Resources", style: "{% if branding %} color: #{branding.icon_color};{% endif %}"}
                .fa.fa-file-text-o.header-link
            - if feature_flags.group_work
              - if request.resolver_match.url_name == 'user_course_group_work_learner_dashboard'
                %a.disabled.right{:href => "/learnerdashboard/courses/#{course.id}/group_work", :data-tooltip => "Miniboard"}
                  .mk-icon-groupworknav.header-link
              - else
                %a.right{:href => "/learnerdashboard/courses/#{course.id}/group_work", :data-tooltip => "Miniboard", :style =>  "{% if branding and branding.icon_color %} color: #{branding.icon_color};{% endif %}"}
                  .mk-icon-groupworknav.header-link
            - if feature_flags.discussions
              - if request.resolver_match.url_name == 'course_discussion_learner_dashboard'
                %a.disabled.right{:href => "/learnerdashboard/courses/#{course.id}/discussion", :data-tooltip => "Discussion"}
                  .fa.fa-comments-o.header-link
              - else
                %a.right{:href => "/learnerdashboard/courses/#{course.id}/discussion", :data-tooltip => "Discussion", :style =>  "{% if branding %} color: #{branding.icon_color};{% endif %}"}
                  .fa.fa-comments-o.header-link

            - if request.resolver_match.url_name == 'course_learner_dashboard'
              %a.disabled.right{:href => "learnerdashboard", :data-tooltip => "Portal Home"}
                .fa.fa-map-marker.header-link
            - else
              %a.right{:href => "/learnerdashboard", :data-tooltip => "Portal Home", style: "{% if branding and branding.icon_color %} color: #{branding.icon_color}; {% endif %}"}
                .fa.fa-map-marker.header-link
%div.learner-dashboard-logo