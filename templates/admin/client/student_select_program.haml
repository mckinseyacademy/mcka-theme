%table.student-list
  %thead
    %th Name
      %span{class: 'asc'}
        ▲
      %span{class: 'desc'}
        ▼
    %th Email
      %span{class: 'asc'}
        ▲
      %span{class: 'desc'}
        ▼
    %th Date Added
      %span{class: 'asc'}
        ▲
      %span{class: 'desc'}
        ▼
    %th Added By
      %span{class: 'asc'}
        ▲
      %span{class: 'desc'}
        ▼
    %th Status
      %span{class: 'asc'}
        ▲
      %span{class: 'desc'}
        ▼
    %th Invite
      %span{class: 'asc'}
        ▲
      %span{class: 'desc'}
        ▼
  %tbody
    - for student in students
      %tr.student{id: "#{student.id}"}
        %td= student.username
        %td= student.email
        %td= student.created
        %td{style: "color: red;"} admin
        - if student.course_count > 0
          %td enrolled
          %td
        - else
          %td unenrolled
          %td
            %a.invite-user{'href': '/admin/clients/#{client.id}/user/#{student.id}/resend'}
              Resend
