%section
  %h1 Courses without Learner Dashboard
%hr
.close-reveal-modal
  %i.fa.fa-times-circle
.row
  .large-12.columns
    - if courseIds
      %table{style:"table-layout: fixed; width: 100%"}
        %thead
          %tr
            %th= _("Name")
            %th= _("")
        %tbody#element-body
          - for courseId in courseIds
            %tr{id: "#{courseId}"}
              %td{style: "word-wrap: break-word"}= courseId
              %td
                %a{:href => "/admin/companies/#{company_id}/courses/#{courseId}/learner_dashboard"}
                  %i.fa.fa-plus{'style': "color:green; float: right;"}
    - else
      All Courses have Learner Dashboards