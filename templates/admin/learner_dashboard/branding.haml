.row
  .large-12.columns
    -if learner_dashboard_branding
      .row
        .large-6.columns 
          .sub-1 Background Image:
          -if learner_dashboard_branding.background_image
            %img{src: "/company_images/#{learner_dashboard_branding.background_image}", width: 150, height:150}
          -else
            None
          %br
          %br
          .div
            .sub-1 Discover title color:
            .sub-2{style: "color:#{learner_dashboard_branding.discover_title_color}"}= learner_dashboard_branding.discover_title_color
          %br
          .div
            .sub-1 Discover author color:
            .sub-2{style: "color:#{learner_dashboard_branding.discover_author_color}"}= learner_dashboard_branding.discover_author_color
          %br
          .div
            .sub-1 Icon color:
            .sub-2{style: "color:#{learner_dashboard_branding.icon_color}"}= learner_dashboard_branding.icon_color
          %br
          .div
            .sub-1 Discover rule color:
            .sub-2{style: "color:#{learner_dashboard_branding.discover_rule_color}"}= learner_dashboard_branding.discover_rule_color
          %br
          .div
            .sub-1 Rule color:
            .sub-2{style: "color:#{learner_dashboard_branding.rule_color}"}= learner_dashboard_branding.rule_color
          %br
          .div
            .sub-1 Background color:
            .sub-2{style: "color:#{learner_dashboard_branding.background_color}"}= learner_dashboard_branding.background_color
          %br
          .div
            .sub-1 Background style:
            .sub-2= learner_dashboard_branding.get_background_style_display
          %br
          %br
        .large-6.columns 
          .sub-1 Logo Image:
          -if learner_dashboard_branding.logo_image
            %img{src: "/company_images/#{learner_dashboard_branding.logo_image}", width: 150, height:150}
          -else
            None
      %div
        %a.button.radius.small{href: "/admin/companies/#{client_id}/courses/#{course_id}/learner_dashboard/#{learner_dashboard_id}/branding", data-reveal-id: 'tileModal', data-reveal-ajax: 'true'}
            Edit
        %a.button.radius.small..confirm{href: "/admin/companies/#{client_id}/courses/#{course_id}/learner_dashboard/#{learner_dashboard_id}/branding_reset"}
            Delete Branding
    - else 
      %p
        Learner dashboard branding is not defined for this client
      %a.button.radius.small{href: "/admin/companies/#{client_id}/courses/#{course_id}/learner_dashboard/#{learner_dashboard_id}/branding", data-reveal-id: 'tileModal', data-reveal-ajax: 'true'}
            Create Branding
