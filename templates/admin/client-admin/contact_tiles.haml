-for contact in contacts
  %li.contact-tile
    -if view_type == "admin"
      %i.fa.fa-times-circle{'title': 'REMOVE', 'data-userid': '#{contact.id}'}
    %img.profile-image{"src": '#{contact.image_url}'}
    .contact-infos
      .contact-info-value.contact-name
        = contact.full_name
      .contact-info-value
        %i
          = contact.title
      .contact-info-value
        %i
          = contact.phone
      .contact-info-value
        %a{href: "mailto:#{contact.email}"}= "Email"
