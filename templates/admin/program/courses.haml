- extends 'admin/program/detail.haml'
- load staticfiles
- block admin_detail
  %h1
    %span= _("Program: ")
    %span= program.display_name
  %hr
  %section
    .large-8.columns#course-list
      - include "admin/program/course_select.haml"
    .large-4.columns.course-selection
      %a#course-program-action.button.radius.tiny{href: "/admin/programs/#{program.id}/add_courses/"}
        %span= _("Move Selected Courses into Program")
      .select-program-box
        .name= program.display_name
        .prog-info
          %span= _("Program Run:")
          %span= program.start_date
          %span -
          %span= program.end_date
        .prog-info
          %span= _("Number of Courses:")
          %span{style: "color: red"} 000
- block js_snippets
  %script{src: "{% static 'js/program_courses.js' %}"}