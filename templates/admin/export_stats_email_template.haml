- load i18n

%div{:style => "background-color: #336ab1;padding: 10px 20px 100px;font-family: Arial, sans-serif;color: #333333;font-size: 15px;font-weight: 400;"}
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "max-width: 750px; margin: 0 auto;border-collapse: collapse;", :width => "100%"}
    %tr
      %td{:style => "text-align: center; padding: 10px 0;"}
        %img{:alt => "MCKA-logo", :src => "{{mcka_logo_url}}", :style => "max-width: 185px;", :width => "185"}
    %tr
      %td
        %div{:style => "background-color: #ffffff; padding: 40px; -webkit-border-radius: 5px 5px 0 0;-moz-border-radius: 5px 5px 0 0;border-radius: 5px 5px 0 0;"}
          %h3{:style => "margin-top: 0;font-size: 18px;margin-bottom: 10px;color: #333333;"}
            #{first_name},
          %p{:style => "line-height: 22px;font-size: 15px;color: #333333;"}
            {% blocktrans with report=report_name %} The "{{report}}" report is ready to download. {% endblocktrans %}
          %p{:style => "line-height: 22px;font-size: 15px;margin-top: 20px;color: #333333;"}
            {% trans "Please click below to login and download your report." %}
          %a{:href => "{{download_link}}", :style => "text-transform: uppercase;margin-top: 15px;margin-bottom: 20px; display: inline-block; border: 1px solid #004fa4;-webkit-border-radius: 5px;-moz-border-radius: 5px;border-radius: 5px;font-size: 15px;font-weight: bold; color: #004fa4;padding: 12px 38px;text-decoration: none;"}
            {% trans "Download Report" %}
          %p{:style => "line-height: 22px;color: #333333;"}
            {% trans "Best Regards," %}
            %br
            McKinsey Academy Team
          %p{:style => "line-height: 22px;margin-bottom: 0;color: #333333;"}
            {% trans "Contact" %}
              %a{:href => "mailto:{{support_email}}", :style => "text-decoration: none;color: #004fa4;"}
                #{support_email}
            {% trans "if you have any questions" %}
    %tr
      %td
        %div{:style => "padding: 10px; background-color: #062750; -webkit-border-radius: 0 0 5px 5px;-moz-border-radius: 0 0 5px 5px;border-radius: 0 0 5px 5px;"}
