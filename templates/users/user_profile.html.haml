- from django.utils.translation import ugettext as _
.user-profile
  .user-image
    %img(src = user.image_url(160))
  .user-detail
    .username
      = user.username
    .fullname
      %i.fa.fa-user
      .field-group
        .fieldtitle
          = _("Full Name")
          %a.editfield
            = _("edit")
        .fieldcontent = user.name
    .title
      %i.fa.fa-info
      .field-group
        .fieldtitle
          = _("Title")
          %a.editfield
            = _("edit")
        .fieldcontent Academy Superstar
    .email
      %i.fa.fa-envelope
      .field-group      
        .fieldtitle
          = _("Email")
          %a.editfield
            = _("edit")
        .fieldcontent = user.email
    .logout
      %a.button.small.radius(href="/logout")
        = _("Log Out")
