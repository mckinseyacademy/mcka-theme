- extends "layout.haml"
- load i18n

- block content
  #error_500.error-page
    .row
      .large-10.large-centered.columns
        %h1 {% trans "500: Error" %}
        %hr
        .sub-1 {% trans "Sorry!" %}
        %p {% trans "Something has gone wrong. Our team has been alerted to the issue and is looking into it." %}
        %p {% blocktrans %}Please go back to <a href='https://www.mckinseyacademy.com'>www.mckinseyacademy.com</a>, or contact us at <a href:'#{support}'>support</a>.{% endblocktrans %}
        %img{src: "/static/image/errors/McKA_errors_1500illus.png", srcset: "/static/image/errors/McKA_errors_1500illus@2x.png 2x"}
