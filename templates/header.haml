%header.row.collapse.background-blue{role: "banner"}
  .large-12.columns
    %a.logo{href: "/"}
    %span.header-menu
      %ul
        %li
          %a{href: '/about'}= _("About")
        %li
          %a{href: '/programs'}= _("Programs")
        %li
          %a{href: '/experience'}= _("Experience")
        %li
          %a{href: '/contact'}= _("Contact")
    - block user_region
      - if user
        %a.user-info{href: "#", data-dropdown: "profile-container"}
          .user-name
            = user.username
          %i.fa.fa-sort-asc
          .user-image
            %img{src: "#{user.image_url}"}
          #profile-container{data-dropdown-content: "true"}
      - else
        .login-action
          %a.tiny.radius.button{href: "/accounts/login"}
            = _("Log In")
