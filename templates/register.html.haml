%%inherit(file="main.html.haml")

%%block(name="user_region")

%%block(name="content")
  - from django.utils.translation import ugettext as _
  .row
    .large-4.medium-4.columns
      &nbsp;
    .registration-form.large-4.medium-4.columns
      %form(action="/register/", method="POST")
        .error
          - if None != error:
            = error
        = csrf_token
        = form
        %input.button.radius.small(type="submit", value=_("Register"))
      %a.other(href="/login")
        = _("Log In")
    .large-4.medium-4.columns
      &nbsp;

%%block(name="js_snippets")
  :javascript
    $('form input[type="text"]').on('keypress', function(){
      $('.error').text('');
    });
