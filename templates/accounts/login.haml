- extends "layout.haml"

- block header
  - include 'accounts/login_header.haml'

- block content
  .row
    .large-4.medium-4.columns
      &nbsp;
    .login-form.large-4.medium-4.columns
      %form{action: "/accounts/login/", method: "POST"}
        .error
          - if error
            = error
        - csrf_token
        = form
        %input.button.radius.small{type: "submit", value: "#{login_label}"}
      %a.other{href: "/accounts/register"}
        = _("Register")
    .large-4.medium-4.columns
      &nbsp;

- block js_snippets
  :javascript
    $('form input[type="text"]').on('keypress', function(){
      $('.error').text('');
    });
