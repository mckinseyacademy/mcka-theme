- extends "layout.haml"

- block page_title
  %title= _("Access | McKinsey Academy")




- block content
  - if redirect_to
    .row
      .login-form.large-10.medium-10.large-centered.medium-centered.columns
        .row
          .large-7.medium-7.columns
            %p
              %i.fa.fa-spinner.fa-spin
              = _("You will be redirected to your login provider.")
  - else
    .row
      .login-form.large-10.medium-10.large-centered.medium-centered.columns
        .row
          .large-7.medium-7.columns
            .sub-1= _("Sorry!")
            %p= _("There was a problem with your access code.")


- block js_snippets
  - if redirect_to
    :javascript
      setTimeout(function redirect() {
        window.location = '{{ redirect_to|safe }}'
      }, 2000)

