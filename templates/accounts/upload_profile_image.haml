-load staticfiles
- block upload_profile_image
.upload-profile-image
  %form#upload-profile-image-form{action: "/accounts/user/#{user.id}/upload_profile_image", method: "POST", enctype: "multipart/form-data"}
    %label.label-10
      %span.label-5
        STEP 1:
      SELECT NEW PROFILE IMAGE
    %hr
    - csrf_token
    .browse-wrapper
      %button#browse-image.button.tiny.radius{'type': 'button'} Browse
      %label{'for': 'id_profile_image'} No file selected.
      = form
    .spinner-image
      %img.spinner.upload-image{'src': "{% static 'image/loading-spin.svg' %}", 'alt': "Loading icon"}
    %br
    %br
    .error.warning
      - if error
        = error
