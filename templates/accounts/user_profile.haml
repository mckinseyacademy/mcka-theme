.user-profile
  .user-image
    %img{src: "#{user_image_url}"}
  .user-detail
    .username
      = user.username
    .fullname
      %i.fa.fa-user
      .field-group
        .fieldtitle
          = _("Full Name")
          %a.editfield{data-reveal-id: "edit_field_modal", data-reveal-ajax: "true", href: "/accounts/edit_fullname/"}
            = _("edit")
        .fieldcontent
          = user.formatted_name
    .title
      %i.fa.fa-info
      .field-group
        .fieldtitle
          = _("Title")
          %a.editfield{data-reveal-id: "edit_field_modal", data-reveal-ajax: "true", href: "/accounts/edit_title/"}
            = _("edit")
        .fieldcontent
          = user.title
    .email
      %i.fa.fa-envelope
      .field-group
        .fieldtitle
          = _("Email")
        .fieldcontent
          = user.email
    .logout
      %a.button.small.radius{href: "/accounts/logout"}
        = _("Log Out")
