.user-profile
  .user-image
    %img{src: "#{user_image_url}"}
    %a#edit-user-image{"data-reveal-id": "edit-user-image-modal", 'href': '#'}
      change photo
  .user-detail
    .username
      = user.username
    .fullname
      %i.fa.fa-user
      .field-group
        .fieldtitle
          = _("Full Name")
          %a.editfield
            = _("edit")
        .fieldcontent
          = user.formatted_name
    .title
      %i.fa.fa-info
      .field-group
        .fieldtitle
          = _("Title")
          %a.editfield
            = _("edit")
        .fieldcontent
          = user.title
    .email
      %i.fa.fa-envelope
      .field-group
        .fieldtitle
          = _("Email")
        .fieldcontent
          = user.email
    .logout
      %a.button.small.radius{href: "/accounts/logout"}
        = _("Log Out")
