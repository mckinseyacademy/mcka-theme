- extends "layout.haml"

- block page_title
  %title= _("Login Process Failed | McKinsey Academy")

- block content
  #error_sso.error-page
    .row
      .large-10.large-centered.columns
        %h1 Sign in error
        %hr
        .sub-1 Sorry!
        - if error_details
          %p
            = error_details
        - else
          %p Something has gone wrong, and we were not able to process the login with your company's login provider.
        %p Please contact us at <a href:'mailto:support@mckinseyacademy.com'>support@mckinseyacademy.com</a>.
        %img{src: "/static/image/errors/McKA_errors_1500illus.png", srcset: "/static/image/errors/McKA_errors_1500illus@2x.png 2x"}
