- extends "layout.haml"
- load i18n

- block content
  #error_503.error-page
    .container
      .row
        .col
          .contentCard.progressWidgets.text-center
            .errorContWrap
              .icon
                %i.material-icons
                  warning
              .errorText
                %h4
                  {% trans "Service is temporarily unavailable." %}
              .content
                %p
                  {% blocktrans %}If you continue to have issues, please visit our{% endblocktrans %}
                  %a{:href => "/faq"} {% trans "FAQ page" %}
                  {% trans "or" %}
                  %a{:href => "#{support}", :target => "_blank"} {% trans "support" %}.
