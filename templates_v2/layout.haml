                %button.btn.btn-primary.mt-10.ome.dome-bc{:type => "submit"}
                  {% trans "Save" %}

    - block edit_photo_modal
      .modal.middleSize.noTopBorder.fade.editPhotoModal{:aria-hidden => "true", :aria-labelledby => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              .col
                %h4.modal-title
                  {% trans "Profile Photo" %}
              %button.close{:aria-label => "Close", :data-dismiss => "modal", :type => "button"}
                %span{:aria-hidden => "true"} &#xD7;
            .modal-body
              .photoEditSteps
                .step
                  .head.clearfix
                    %span.stepTitle
                      {% trans "step 1:" %}
                    %span.title
                      {% trans "Select New Profile Image" %}
                  .inputFileWrap.clearfix
                    .file-upload
                      .file-select.ome
                        .file-select-button.btn.btn-primary.dome-bc{:id => ""}
                          {% trans "browse" %}
                        #noFile.file-select-name
                          {% trans "No file selected" %}
                        %input#chooseFile{:name => "Browe", :type => "file"}
                      .error
                        %i.material-icons error
                        Error uploading the file. Please try again and be sure to use an accepted file format.
                  .step
                    .head.clearfix
                      %span.stepTitle
                        {% trans "step 2:" %}
                      %span.title
                        {% trans "Crop & Save" %}
                    .imgCropWrap
                    %div
                      %button.btn.btn-primary.ome.dome-bc{:type => "button"}
                        {% trans "crop & save" %}

