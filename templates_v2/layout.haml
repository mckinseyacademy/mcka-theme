    - block edit_full_name_modal
      .modal.middleSize.noTopBorder.fade.editFullName{:aria-hidden => "true", :aria-labelledby => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              .col
                %h4.modal-title
                  {% trans "Enter your full name" %}
              %button.close{:aria-label => "Close", :data-dismiss => "modal", :type => "button"}
                %span{:aria-hidden => "true"} ×
            .modal-body
              %form.white.clearfix
                .form-group
                  %label.form-label{:for => "exampleInputEmail1"}
                    {% trans "First name" %}
                  %input#exampleInputEmail1.form-control.form-input{:aria-describedby => "emailHelp", :placeholder => "", :type => "email"}/
                .form-group
                  %label.form-label{:for => "exampleInputEmail1"}
                    {% trans "Last name" %}
                  %input#exampleInputEmail1.form-control.form-input{:aria-describedby => "emailHelp", :placeholder => "", :type => "email"}/
                %div
                  %button.btn.btn-primary.mt-20.ome.dome-bc{:type => "submit"}
                    {% trans "Save" %}

