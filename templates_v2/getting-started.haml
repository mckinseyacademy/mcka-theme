- extends "layout.haml"
- load i18n
- load static

- get_current_language as LANGUAGE_CODE
- get_current_language_bidi as LANGUAGE_BIDI

- block content
  .container
    .row.justify-content-center
      .col-lg-8.col-md-12.border-top-main.bg-white.p-5.static-page.guide
        %h1 {% trans "McKinsey Academy Quick Start Guide" %}
        %h5 {% trans "QUICK LINKS" %}
        %ul.nav-links
          %li
            %a{:href => "#access-mckinsey-academy"} {% trans "Accessing McKinsey Academy" %}
          %li
            %a{:href => "#navigation-platform"} {% trans "Navigation and platform highlights" %}
          %li
            %a{:href => "#mobile-app"} {% trans "Mobile app" %}
        %p
          {% trans "McKinsey Academy is compatible with Chrome, Firefox, Safari, and Internet Explorer (version 11)." %}
            {% trans "For the best experience, we recommend " %}
            %a{:href => 'https://www.google.com/chrome/' , :target => '_blank'} {% trans "Chrome." %}

        %hr.blank.hr-lg#access-mckinsey-academy
        %h2 {% trans "Accessing McKinsey Academy" %}
        %h5 {% trans "Registration" %}
        %p {% trans "Each participant receives a welcome email with an activation link. Follow this link to create an account username and password." %}
        %div.illustrations
          %img.thirty-3.flip-rtl{:alt => "", :src => "/static/image/guide/activation-link.jpg"}/
        %p {% trans "If you believe you are enrolled in a course but have not received a welcome email:" %}
        %ul.steps
          %li
            %b {% trans "Check your junk folder." %}
            {% trans "Your welcome email may have been caught by spam filters." %}
          %li
            %b {% trans "Check that your inbox is not out of storage." %}
            {% trans "Emails may be rejected by full servers." %}
          %li
            %b {% trans "Check your local firewall settings." %}
            %a{:href => "https://www.mckinseyacademy.com/"} mckinseyacademy.com
            {% trans "may be blocked." %}
          %li
            %b {% trans "Confirm your enrollment with a local administrator" %}
        %p
          {% trans "For further technical support and troubleshooting, see our" %}
          %a{:href => "/faq"} {% trans "FAQs" %}
          {% trans "page. If you still seek assistance, contact " %}
          %a{:href => "#{support}", :target => "_blank"} support

        %h5 {% trans "Login" %}
        %p
          {% trans "Once registered, you can" %}
          %a{:href => "https://www.mckinseyacademy.com/login"} {% trans "login" %}
          {% trans "with the username or email address associated with your account. Save or bookmark this URL to easily access your course or program in the future. Reset your password anytime by using the" %}
          %a{:href => "https://www.mckinseyacademy.com/login"} {% trans "Forgot password?" %}
          {% trans "link." %}


        %hr.hr-lg.blank#navigation-platform

        %h2 {% trans "Navigation and platform highlights" %}
        %p {% trans "Depending on your course or program, you'll be directed to the My Courses or Learner Dashboard landing page." %}
        %div.illustrations
          .img-with-cap.fifty-half
            %p
              %img.flip-rtl{:alt => "", :src => "/static/image/guide/my-courses-footprint.jpg"}/
            {% trans "My Courses" %}
          .img-with-cap.fifty-half
            %p
              %img.flip-rtl{:alt => "", :src => "/static/image/guide/learner-dashboard-footprint.jpg"}/
            {% trans "Learner Dashboard" %}
        %hr.blank
        %p {% trans "From here, you can navigate to the courses or activities you're enrolled in. Return to your landing page anytime using the main navigation." %}
        %p {% trans "See below for more information on" %}
          %a{:href => "http://mckinseyacademy.com/courses"} {% trans "Learner Dashboards" %}
          .

        %hr.blank

        %h5 {% trans "COURSE OVERVIEW" %}
        %p {% trans "Each course has an overview page where you can access lessons, course materials, announcements, and resources." %}
        %div.illustrations
          %img.full-width.replace-rtl{:alt => "", :src => "{% if LANGUAGE_BIDI %} {% static 'image/guide/course-overview-footprint-rtl.png' %} {% else %} {% static 'image/guide/course-overview-footprint.png' %}{% endif %}"}/
        %p {% trans "Depending on your course, you can also explore course features such as Discussions, Group Work, and cohort Leaderboard. Note: not all courses have all features." %}
        %h5 {% trans "LESSONS" %}
        %p {% trans "Lessons are composed of individual modules. Complete the modules to complete the lesson. Complete the lessons to complete the course." %}
        %p {% trans "View modules in fullscreen mode" %}
          %i.material-icons
            zoom_out_map
          {% trans "to put learning front-and-center. Move between modules by using the contextual navigation on screen." %}
        %div.illustrations
          %img.sixty-6.flip-rtl{:alt => "", :src => "/static/image/guide/prev-next-module-navigator.jpg"}
        %p
          {% trans "Use the module navigator in the lesson title to jump to a specific module. Here you can also see the status of individual modules:" %}
          {% trans "not started" %}
          %i.material-icons.gray
            panorama_fish_eye
          {% trans ", in progress " %}
          %i.material-icons.gray
            tonality
          {% trans ", and completed " %}
          %i.material-icons
            check_circle
          .
        %div.illustrations
          %img.sixty-6.replace-rtl{:alt => "", :src => "{% if LANGUAGE_BIDI %}{% static 'image/guide/progress-rtl.png' %}{% else %} {% static 'image/guide/progress.png' %}{% endif %}"}/

        %p {% trans "As you complete modules and lessons, your completion status will update in detail on the My Progress page." %}

        %hr.blank.hr-lg

        %h5 {% trans "Learner Dashboard" %}
        %p {% trans "Learner Dashboards help you manage program activities. Keep track of deadlines and milestones with your Calendar, participate in threaded Discussions, and complete group activities via the Miniboard." %}
        %p {% trans "Your course might be designed to unfold over time. You may find some tiles are locked until theyâ€™re ready to be used." %}

        %hr.blank.hr-lg#mobile-app

        %h2 {% trans "Mobile App" %}
        %p
          {% trans "Your courses may also be available on mobile. You can download our mobile app on the" %}
          %a{:href => "https://itunes.apple.com/us/app/mckinsey-academy/id1343006364", :target => "_blank"} {% trans "App Store" %}
          {% trans "or on" %}
          %a{:href => "https://play.google.com/store/apps/details?id=com.mckinseyacademy.android", :target => "_blank"} {% trans "Google Play." %}
          %div.illustrations
            %img{:alt => "", :src => "{% static 'image/guide/mobile-app.png' %}"}/
          %hr.blank.hr-lg
          %div.illustrations.stores
            %a{:target => "_blank", :href => "https://itunes.apple.com/us/app/mckinsey-academy/id1343006364?mt=8", :style => "display:inline-block;overflow:hidden;background:url(/static/image/logos/ios-{{LANGUAGE_CODE }}.svg) no-repeat;width:135px;height:40px;"}
            %a{:href => "https://play.google.com/store/apps/details?id=com.mckinseyacademy.android&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1"}
              %img{:src => "https://play.google.com/intl/en_us/badges/images/generic/{% if LANGUAGE_CODE == 'zh' %}zh-cn{% else %}{{ LANGUAGE_CODE }}{% endif %}_badge_web_generic.png"}/

    .row.justify-content-center
      .col-lg-8.col-md-12.static-page.guide-footer
        %p
          %b {% trans "Still have questions?" %}
          {% trans "Visit our " %}
          %a{:href => "/faq"} {% trans "FAQs" %}
          {% trans "for more guidance." %}
