- load i18n
.course-progress.col.widget
  .holder
    .contenrArea
      .widgetTitle.clearfix
        %span {% trans "Progress" %}
      .title
        %span {% trans "Your course completion status" %}
      .averageTitle
        %span
          {% trans "Average:" %}
          %span
            #{average_progress}%
    .progressArea.bar
      #{course.user_progress}%
      %span
        .filler{"class": "{% if course.user_progress < average_progress %}trailing{% endif %}", "style": "width:#{course.user_progress}%;"}