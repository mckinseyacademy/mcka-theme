- load i18n
.course-engagement.widget.col
  .holder
    .progressArea
      .visualization
        .band-1{"class": "{% if social.points >= 60 %}filled{% endif %}"}
        .band-2{"class": "{% if social.points >= 90 %}filled{% endif %}"}
        .total{"class": "{% if social.points >= 30 %}filled{% endif %}"}= social.points
    .contenrArea
      .widgetTitle.clearfix
        %span {% trans "Engagement" %}
      .title
        %span
          {% trans "Your discussion activity points" %}
      .averageTitle
        %span
          {% trans "Average" %}: #{social.course_avg} {% trans "points" %}
  %span.viewDetailCourse   
    %a.ome.dome-c{:href => "/courses/#{active_course.id}/progress#engagement-block"} 
      {% trans "View Details" %}
  .bookmark.primary
    %svg{:height => "100", :width => "20", :xmlns => "http://www.w3.org/2000/svg", "xmlns:xlink": "http://www.w3.org/1999/xlink"}
      %path{:d => "M5.90639e-13 0L10 0L20 50L10 100L5.90639e-13 100L5.90639e-13 0Z", :fill => "rgb(109,218,1)", :stroke => "none"}
