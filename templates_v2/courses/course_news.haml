- extends "courses/course_base.haml"
- load i18n

- block page_title
  %title
    = program.display_name
    {% trans " | Announcements | Courses | McKinsey Academy" %}

- block content
  .container
    .row
      .col
        .contentCard.coursenews
          #course-news
            %h1 {% trans "Announcements" %}
            - if news
              - for entry in news
                %section
                  .sub-1= entry.date
                  %p
                    - autoescape off
                      = entry.content
                %hr
            - else
              .no-news
                {% trans "No announcements have been posted yet." %}
